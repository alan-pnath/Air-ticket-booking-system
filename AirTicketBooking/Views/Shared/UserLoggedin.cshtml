<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sky Route</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="~/Content/Home/home.css" rel="stylesheet" />
</head>

<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <img class="logo" src="~/Content/Home/images/home-logo.png" alt="Logo" />

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <!-- Use ml-auto to push text to the right -->
                    <li class="nav-item">
                        <a>@Html.ActionLink("Home", "Index", "User", new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("Search flights", "SearchFlights", "User", new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("Book Flights", "BookFlights", "User", new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("Bookings", "", "Home", new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink(" View profile", "", "Home", new { @class = "nav-link" })</a>
                      
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("Logout", "Logout", "Home", new { @class = "nav-link" })</a>
                      
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="home">

        @RenderBody()

    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="footer-logo">
                        <img class="logo" src="~/Content/Home/images/home-logo.png" alt="Logo" />

                    </div>
                    <p>&copy; 2023 My COMPANY</p>
                </div>
                <div class="col-md-4">
                    <div class="footer-contact">
                        <p>123 Main Street, xyz, abcds</p>
                        <p>Phone: (123) 456-7890</p>
                        <p>Email: info@mywebsite.com</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="footer-social">
                        <a href="#" class="fa fa-facebook"></a>
                        <a href="#" class="fa fa-twitter"></a>
                        <a href="#" class="fa fa-linkedin"></a>
                        <a href="#" class="fa fa-instagram"></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>*@
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>