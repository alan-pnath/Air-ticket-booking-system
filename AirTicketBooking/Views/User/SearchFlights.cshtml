@model AirTicketBooking.Models.Search

@{
    ViewBag.Title = "SearchFlights";
    Layout = "~/Views/Shared/UserLoggedin.cshtml";
}
@*<link href="~/Content/Site.css" rel="stylesheet" />*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="search-container">
        <h4 style="color:black;">Search your flights</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-row">
            <div class="form-col">
                <div class="form-group">
                    @Html.LabelFor(model => model.FromDestination, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.FromDestination, new { htmlAttributes = new { @class = "form-control2" } })
                    @Html.ValidationMessageFor(model => model.FromDestination, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-col">
                <div class="form-group">
                    @Html.LabelFor(model => model.ToDestination, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.ToDestination, new { htmlAttributes = new { @class = "form-control2" } })
                    @Html.ValidationMessageFor(model => model.ToDestination, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control2" } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>

        <div class="form-group form-btn">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>

    <div class="results-table">
        <table class="table">
            <thead>
                <tr>
                    <th>From Destination</th>
                    <th>To Destination</th>
                    <th>Flight Name</th>
                    <th>Seat Type</th>
                    <th>Departure Date</th>
                    <th>Flight ID</th>
                    <th>Departure Time</th>
                    <th>Passenger Count</th>
                    <th>Payment Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var flight in Model)
                {
                    <tr>
                        <td>@flight.FromDestination</td>
                        <td>@flight.ToDestination</td>
                        <td>@flight.FlightName</td>
                        <td>@flight.SeatType</td>
                        <td>@flight.DepartureDate.ToShortDateString()</td>
                        <td>@flight.FlightId</td>
                        <td>@flight.DepartureTime</td>
                        <td>@flight.PassengerCount</td>
                        <td>@flight.PaymentAmount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<style>
    /* Container styling */
    .search-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    /* Form row styling */
    .form-row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    /* Form column styling */
    .form-col {
        flex: 0 0 calc(50% - 10px);
        margin-bottom: 10px;
    }

    /* Label styling */
    .control-label {
        font-weight: bold;
        color: black;
    }

    /* Input and validation message styling */
    .form-control2 {
        width: 300px; /* Adjust the width as needed */
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 16px;
    }

    .text-danger {
        color: #ff0000;
    }

    /* Submit button styling */
    .form-btn {
        text-align: center;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Table styling using classes */
    .table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 20px;
        background-color: #f9f9f9;
    }

    .table-header {
        padding: 8px;
        text-align: left;
        background-color: #007bff;
        color: #fff;
    }

    .table-data {
        padding: 8px;
        text-align: left;
    }

    .table-row-even {
        background-color: #f2f2f2;
    }
</style>


