<style>
    .custom-container {
        text-align: center;
        margin: 0 auto;
        max-width: 400px; /* Adjust the max-width as needed */
    }

    .custom-header {
        color: #000; /* Black text color for the header */
    }

    .custom-hr {
        background-color: #000; /* Black color for the horizontal rule */
    }

    .custom-row {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column; /* Stack columns vertically */
    }

    .custom-col {
        margin: 5px;
    }

    .custom-form-group {
        text-align: center; /* Center align the form groups */
    }

    .custom-label {
        color: #000; /* Black label text color */
    }

    .custom-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .custom-error-text {
        color: #ff0000; /* Red color for error messages */
    }

    .custom-button {
        text-align: center;
    }

    .custom-btn {
        padding: 10px 20px;
        background-color: #007bff; /* Blue button background color */
        color: #fff; /* White button text color */
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .custom-btn-primary {
        background-color: #007bff; /* Blue button background color */
    }

    /* You can add more CSS styles or adjust existing ones to further customize the appearance of your form. */


    /* Table styling */
    .table {
        background-color: #fff; /* Change table background color to white */
        color: #000; /* Change table text color to black */
    }
</style>




