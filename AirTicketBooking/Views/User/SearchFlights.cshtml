@model AirTicketBooking.Models.Search

@{
    ViewBag.Title = "SearchFlights";
    Layout = "~/Views/Shared/UserLoggedin.cshtml";
}
@*<link href="~/Content/Site.css" rel="stylesheet" />*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="custom-container text-center">
        <h4 class="custom-header">Search for flights</h4>
        <hr class="custom-hr" />
        @Html.ValidationSummary(true, "", new { @class = "custom-error-text" })
        <div class="custom-row">
            <div class="custom-col">
                <div class="custom-form-group">
                    @Html.LabelFor(model => model.FromDestination, htmlAttributes: new { @class = "custom-label text-black" })
                    @Html.EditorFor(model => model.FromDestination, new { htmlAttributes = new { @class = "custom-input" } })
                    @Html.ValidationMessageFor(model => model.FromDestination, "", new { @class = "custom-error-text" })
                </div>
            </div>
            <div class="custom-col">
                <div class="custom-form-group">
                    @Html.LabelFor(model => model.ToDestination, htmlAttributes: new { @class = "custom-label text-black" })
                    @Html.EditorFor(model => model.ToDestination, new { htmlAttributes = new { @class = "custom-input" } })
                    @Html.ValidationMessageFor(model => model.ToDestination, "", new { @class = "custom-error-text" })
                </div>
            </div>
        </div>

        <div class="custom-form-group">
            @Html.LabelFor(model => model.DepartureDate, htmlAttributes: new { @class = "custom-label text-black" })
            @Html.EditorFor(model => model.DepartureDate, new { htmlAttributes = new { @class = "custom-input" } })
            @Html.ValidationMessageFor(model => model.DepartureDate, "", new { @class = "custom-error-text" })
        </div>
        <br />

        <div class="custom-form-group">
            <div class="custom-button">
                <button type="submit" class="custom-btn custom-btn-primary">Search</button>
            </div>
        </div>
    </div>
}




