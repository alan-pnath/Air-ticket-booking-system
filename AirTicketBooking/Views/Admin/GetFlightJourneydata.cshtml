@model List<AirTicketBooking.Models.FlightJourney>
@{
    ViewBag.Title = "GetFlightJourneydata";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Flight Journey</h2>

<table class="table">
    <thead>
        <tr>
            <th>Flight Booking ID</th>
            <th>From Destination</th>
            <th>To Destination</th>
            <th>Departure Date</th>
            <th>Departure Time</th>
            <th>Flight ID</th>
            <th>Seat Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.FlightBookingId</td>
                    <td>@item.FromDestination</td>
                    <td>@item.ToDestination</td>
                    <td>@item.DepartureDate.ToShortDateString()</td>
                    <td>@item.DepartureTime.ToString(@"hh\:mm\:ss")</td>
                    <td>@item.FlightId</td>
                    <td>@item.SeatType</td>
                    <td>
                        @Html.ActionLink("Edit", "EditFlightJourney", new { id = item.FlightBookingId }) |
                        @Html.ActionLink("Details", "GetFlightJourneyDataById", new { id = item.FlightBookingId }) |
                        @Html.ActionLink("Delete", "DeleteFlightJourney", new { id = item.FlightBookingId }, new { @onclick = "return confirm('Are you sure you want to delete?');" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8">No data available</td>
            </tr>
        }
    </tbody>

</table>

@if (TempData["result3"] != null)
{
    <script type="text/javascript">
        alert("Record Is Deleted Successfully");
    </script>

}
